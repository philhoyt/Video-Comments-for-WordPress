<?xml version="1.0"?>
<ruleset name="Video Comments">
	<description>WordPress coding standards for the Video Comments plugin.</description>

	<!-- What to scan -->
	<file>.</file>
	<exclude-pattern>/vendor/*</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>

	<!-- Show progress and use colours -->
	<arg value="sp"/>
	<arg name="colors"/>
	<arg name="extensions" value="php"/>
	<arg name="basepath" value="."/>

	<!-- Target PHP 7.4+ -->
	<config name="testVersion" value="7.4-"/>

	<!-- WordPress ruleset -->
	<rule ref="WordPress">
		<!-- Allow short array syntax [] â€” we use it throughout -->
		<exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
		<!-- Our file-naming convention intentionally uses shorter names (class-render.php
		     rather than class-video-comments-render.php). -->
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
	</rule>

	<!-- Minimum WP version for deprecated function checks -->
	<config name="minimum_supported_wp_version" value="6.0"/>

	<!-- Plugin text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="video-comments"/>
			</property>
		</properties>
	</rule>

	<!-- Allow the plugin file header to use a non-standard line length -->
	<rule ref="WordPress.Files.FileName">
		<properties>
			<property name="is_theme" value="false"/>
		</properties>
	</rule>
</ruleset>
